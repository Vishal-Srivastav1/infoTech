<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     
     <link rel="stylesheet" href="/static/css/style.css">
    <title>Website</title>
  </head>
  <body>
    {{> navbar data=detail}}
    {{> slider slides=slides}}
  
    
      {{!-- banner1 section --}}

     <section class="banner1_section py-5" id="Courses">
       <div class="container text-center">
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-secondary">Start learning new technologies here !!</h1>
            
            <h4 class="text-secondary">Courses schedule</h4>
        </div>   
       </div>
        </div>
     </section>

{{!-- -----------------tables----------------- --}}
     <section >
                <table class="col-md-12 table table-striped table-hover">
            <thead>
                <tbody class="p-4 ">

                  {{#each courseShedul}} 
                  <tr class="row-1 odd">
                    <td class="column-1"><b><a>{{this.CourseName}}</a><b></td><td class="column-2">{{this.FacultyName}}</td><td class="column-3">{{this.Date}}</td><td class="column-4">{{this.time}}</td><td class="column-5"><b><a href="{{this.linkurl}}" rel="noopener" target="_blank">{{this.linktext}}</a><b></td>
                  </tr>
                  {{/each}}
                </tbody>
            </thead>
          </table>
     </section>


{{!-- // !-----services_section----------------! --}}
    <section id="services_section" class="py-4">
          <div class="container">
             <h1 class="text-center text-secondary my-5">Services that we provides</h1>
<div class="row mt-6">
     {{!-- first services colum --}}
     {{#each services}}
     <div class="col-md-4 servicesDynamic1">
      <div class="card servicesDynamic">
        <div class="card-body">

          <div class=" container text-center py-3">
            <i class="{{this.icon}} services_icon"></i>
          </div>

          <h3 class="card-title">{{this.title}}</h3>
           <p>{{this.description}}</p>

           <a href="{{this.link}}" class="btn btn-primary btn-sm text-center">{{this.linkText}} </a>
           {{!-- <a href="#">Support</a> --}}
        </div>
      </div>

     </div>

     {{/each}}
</div>
          </div>

    </section>

   {{!-- ----------- banner 2 Section------------- --}}
