<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Pannel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     
     
</head>
<body>
  
      {{> navbar data=detail}}
         

      
   <H1 class="text-center text-muted"> Admin Pannel</H1>
 
  {{!-- <span class="text-center text-secondary">{{#if msg}}{{msg}}{{else}}{{/if}}</span>
                                  --}}
    {{!-- ---------------section-1 COURSES-----------     --}}
    <div class="p-4 ">
      <section class="col-md-12">
    <div class="bg-warning bg-gradient ">
				  	<div class="card-body ">
						
           <div class="card bg-info bg-gradient text-white">
             <div class="card-body p-4">
              <h3 class="text-center text-secondary">Courses</h3>
              <br>
                 {{#if user}}
              
             
<table class="table">
  <thead>
    <tr>
      <th scope="col"><h3 class="text-secondary">CourseName</h3></th>
      <th scope="col"><h3 class="text-secondary">FacultyName</h3></th>
      <th scope="col"><h3 class="text-secondary">Date</h3></th>
      <th scope="col"><h3 class="text-secondary">Time</h3></th>
      <th scope="col"><h3 class="text-secondary">Linktext</h3></th>
      <th scope="col"><h3 class="text-secondary">Linkurl</h3></th>
    </tr>
  </thead>
  <tbody>
    <tr>
       {{#each  courseShedul}}
      
                  <td>  <input class="form-control bg-dark text-white " name="CourseName" type="text" value="{{this.CourseName}}" aria-label="form-control" readonly >   </td>                   
                   <td>  <input class="form-control bg-dark text-white" name="FacultyName" type="text" value="{{this.FacultyName}}" aria-label="form-control" readonly  >  </td>                 
                   <td>  <input class="form-control bg-dark text-white" name="Date" type="text" value="{{this.Date}}" aria-label="form-control" readonly  >               </td>     
                    <td> <input class="form-control bg-dark text-white" name="time" type="text" value="{{this.time}}" aria-label="form-control" readonly  >                </td> 
                   <td>  <input class="form-control bg-dark text-white" name="linktext" type="text" value="{{this.linktext}}" aria-label="form-control" readonly ></td> 
                   <td>  <input class="form-control bg-dark text-white" name="linkurl" type="text" value="{{this.linkurl}}" aria-label="form-control" readonly  ></td> 
          <th>
            <a href="/courses/course-update?id={{this._id}}" class="btn btn-danger btn btn-sm text-center">Edit</a>
            </th> 
    </tr>
              
              </div>
       {{/each}}
               
              
       {{/if}}
    
  </tbody>
</table>

      </div>

           </div>
			
					</div>
				
        </section>
{{!-- -----------------section-1  COURSES End-------- --}}

    {{!-- -----------------section-2 SERVICES Start -------- --}}
     <section class="my-2">
    <div class="bg-warning bg-gradient ">
				  	<div class="card-body ">
						
           <div class="card bg-info bg-gradient text-white">
             <div class="card-body">
              <h3 class="text-center text-secondary">Services</h3>
              <br>
                 {{#if user}}

          <table class="table">
            <thead>
              <tr>
                <th scope="col"><h3 class="text-secondary">Logo</h3></th>
                <th scope="col"><h3 class="text-secondary">Title</h3></th>
                <th scope="col"><h3 class="text-secondary">Description</h3></th>
                <th scope="col"><h3 class="text-secondary">LinkText</h3></th>
                <th scope="col"><h3 class="text-secondary">Url</h3></th>
               
              </tr>
            </thead>
        <tbody>
          <tr>
            {{#each services}}
            
                        <td>  <input class="form-control bg-dark text-white " type="text" value="{{this.icon}}" aria-label="form-control" readonly >  </td>                   
                        <td>  <input class="form-control bg-dark text-white" type="text" value="{{this.title}}" aria-label="form-control" readonly  </td>                 
                    <td><input class="form-control bg-dark text-white" type="text" value="{{this.description}}" aria-label="form-control" readonly  >              </td>     
                       <td>    <input class="form-control bg-dark text-white" name="Date" type="text" value="{{this.linkText}}" aria-label="form-control" readonly ></td>
                  <td>   <input class="form-control bg-dark text-white" name="Date" type="text" value="{{this.link}}" aria-label="form-control" readonly ></td>
                      
                        
                        
                         <th>
                <a href="/Home/admin/services-update?id={{this._id}}" class="btn btn-danger btn btn-sm text-center">Edit</a>
            
                </th> 
             </tr>
              
              </div>
       {{/each}}
          
       {{/if}}
    
  </tbody>
</table>

      </div>

           </div>
			
					</div>
				
        </section>
{{!-- -----------------section-2 SERVICES End -------- --}}

{{!-- -----------------section-3 SLIDE Start-------- --}}
    <section class="my-2">
    <div class="bg-warning bg-gradient ">
				  	<div class="card-body ">
						
           <div class="card bg-info bg-gradient text-white">
             <div class="card-body">
              <h3 class="text-center text-secondary">Slide</h3>
              <br>
                 {{#if user}}

          <table class="table">
            <thead>
              <tr>
                <th scope="col"><h3 class="text-secondary">Images Name</h3></th>
                <th scope="col"><h3 class="text-secondary">Image Title</h3></th>
                <th scope="col"><h3 class="text-secondary">Image subTitle</h3></th>
               
              </tr>
            </thead>
        <tbody>
          <tr>
            {{#each slides}}
            
                     <td>   <input class="form-control bg-dark text-white " type="text" value="{{this.imageUrl}}" aria-label="form-control" readonly >    </td>
                   <td>  <input class="form-control bg-dark text-white" type="text" value="{{this.title}}" aria-label="form-control" readonly  >     </td>     
                   <td> <input class="form-control bg-dark text-white" type="text" value="{{this.subTitle}}" aria-label="form-control" readonly  >   </td>
                   
                        
                        
                         <th>
               <a href="/admin/slider/update?id={{this._id}}" class="btn btn-danger text-center">Edit</a>

                </th> 
             </tr>
              
              </div>
       {{/each}}
          
       {{/if}}
    
  </tbody>
</table>

      </div>
           </div>
					</div>
</section>
{{!-- -----------------section-3 SLIDE End-------- --}}

</div>
			
			
    



     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
</body>
</html>